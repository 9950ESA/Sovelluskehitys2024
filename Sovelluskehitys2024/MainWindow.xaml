<Window x:Class="Sovelluskehitys2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sovelluskehitys2024"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Hae tietokannasta" HorizontalAlignment="Left" Margin="24,49,0,0" VerticalAlignment="Top" Height="30" Width="116" RenderTransformOrigin="-1.055,4.103" Click="Button_Click"/>
        <Button Content="Lisää tuote" HorizontalAlignment="Left" Margin="599,180,0,0" VerticalAlignment="Top" Height="37" Width="126" Click="Button_Click_1"/>
        <DataGrid x:Name="tuotelista" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="24,109,416,39"/>
        <Label Content="tuotenimi" HorizontalAlignment="Left" Margin="521,58,0,0" VerticalAlignment="Top"/>
        <Label Content="tuotehinta" HorizontalAlignment="Left" Margin="521,120,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tuotenimi" HorizontalAlignment="Left" Margin="585,54,0,0" TextWrapping="Wrap" Text="a" VerticalAlignment="Top" Width="180" Height="30" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="tuotehinta" HorizontalAlignment="Left" Margin="585,115,0,0" TextWrapping="Wrap" Text="b" VerticalAlignment="Top" Width="180" Height="31"/>
        <ComboBox x:Name="tuotelista_cb" HorizontalAlignment="Left" Margin="599,285,0,0" VerticalAlignment="Top" Width="126" Height="27"/>
        <Button Content="Poista tuote" HorizontalAlignment="Left" Margin="599,339,0,0" VerticalAlignment="Top" Height="37" Width="126" Click="Button_Click_2"/>
    </Grid>
</Window>
